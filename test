        private void stackToolStripMenuItem_Click(object sender, EventArgs e)
        {

            lstMenuOptions.Items.Clear(); //clears items from lstMenuOptions in case user already has clicked on menu item
            tHead.Clear();

            tHead.SelectedText = "Stack Menu Options";
            lstMenuOptions.Items.Add("1. Add one time to Stack");
            lstMenuOptions.Items.Add("2. Add Huge List of Items to Stack");
            lstMenuOptions.Items.Add("3. Display Stack");
            lstMenuOptions.Items.Add("4. Delete from Stack");
            lstMenuOptions.Items.Add("5. Clear Stack");
            lstMenuOptions.Items.Add("6. Search Stack");
            lstMenuOptions.Items.Add("7. Return to Main Menu");

            lstMenuOptions.Visible = true;
            tHead.Visible = true;
        }

