        private void lstMenuOptions_SelectedIndexChanged(object sender, EventArgs e)
        {
            //prompts the user to enter a string and then inserts the input into the data structure.
            if (lstMenuOptions.SelectedIndex == 0)
            {
                lblMenu1.Visible = true;
                tbMenu1.Visible = true;
                string sName = tbMenu1.Text;
                int iCount = 0;


                if (mStack.Selected)
                {
                    Stack<string> myStack = new Stack<string>();
                    myStack.Push(sName);
                }
                else if(mQueue.Selected)
                {
                    Queue<string> myQueue = new Queue<string>();
                    myQueue.Enqueue(sName);
                }
                else 
                {
                    Dictionary<int, string> myDictionary = new Dictionary<int, string>();
                    myDictionary.Add(iCount, sName);
                    iCount++;
                }
            }
